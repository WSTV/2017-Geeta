<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'span6' %>
  </div>
  <div class="field">
    <%= f.label :link %>
    <%= f.text_field :link, :class => 'span6'%>
  </div>
  <div class="field">
    <%= f.label 'interests[]', 'Select interest tags' %>
    <%= select_tag "interests[]", options_from_collection_for_select(@interests, "id", "name"), :class => 'span6', :multiple => true %>
  <div class="field">
    <%= f.label 'locations[]', 'Select geo tags' %>
    <%= select_tag "locations[]", options_from_collection_for_select(@locations, "id", "name"), :class => 'span6', :multiple => true %> 
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'span6' %>
  </div>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author, :class => 'span6' %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'span6' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
